{
  "commit": {
    "format": "conventional",
    "maxTitleLength": 72,
    "maxBodyLineLength": 100,
    "requireScope": false,
    "requireBody": false,
    "scopes": ["auth", "player", "profile", "ui", "api"],
    "prefix": {
      "enabled": true,
      "ticketFormat": "{ticket}: ",
      "branchFallback": true
    },
    "rules": {
      "imperativeMood": true,
      "capitalizeTitle": true,
      "noTrailingPeriod": true
    }
  },
  "pr": {
    "title": {
      "prefix": {
        "enabled": true,
        "ticketFormat": "[{ticket}] ",
        "branchFallback": true
      },
      "maxLength": 100
    },
    "sections": [
      { "name": "Summary", "required": true },
      { "name": "Changes", "required": true, "autoPopulate": "commits" },
      { "name": "Tickets", "required": false, "autoPopulate": "extracted" },
      { "name": "Test Plan", "required": false },
      { "name": "Screenshots", "required": false }
    ]
  },
  "ticketPattern": "WTHRAPP-\\d+",
  "ticketLinkFormat": "https://jira.foxcorp.com/browse/{ticket}",
  "baseBranch": "develop",
  "integrations": {
    "vcs": {
      "provider": "github",
      "mcpServer": "user-github"
    },
    "ticketing": {
      "provider": "jira",
      "mcpServer": "user-jira",
      "fetchTicketDetails": true,
      "includeInPr": {
        "ticketTitle": true,
        "description": false,
        "acceptanceCriteria": true
      }
    }
  }
}
